{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/node",
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types/shared",
      "./src/types/node"
    ]
  }
}